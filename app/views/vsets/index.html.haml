-#  This file is app/views/sets/index.html.haml
#sets
  - @vsets.each_with_index do |vset, index|
    .item
      %h2= vset.title 
      %p= vset.description
      %p= link_to "More about #{vset.title}", vset_path(vset)
      %p= link_to "Take Quiz", :controller => 'vsets', :action => 'quiz', :vset => vset.id
      %p= link_to "Edit", edit_vset_path(vset)
      %p= button_to "Delete", vset_path(vset), :method => :delete


:javascript
  $('#container').masonry({
      // options
      itemSelector : '.item',
      columnWidth : 240
  });